<%- include('./partials/header') %>
<section class="hero is-medium">
    <div class="hero-body">
        <div class="container has-text-centered">
            <h2 class="title">
                Room Code -  
                <%=roomData.roomCode%>
            </h2>
        </div>
    </div>
</section>
<section class="user-card">
    <div class="container">
        <% if (!roomData.rolesAssigned) { %>
            <form action="/assignRoles" method="POST" style="width: 50%; margin-bottom: 30px;">
                <div class="field is-grouped">
                    <p class="control is-expanded">
                        <input class="input" type="text" name="assassins" placeholder="No of Assassins">
                    </p>
                    <p class="control is-expanded">
                        <input class="input" type="text" name="seers" placeholder="No of Seers">
                    </p>
                    <p class="control">
                        <button class="button is-primary">
                        Assign Roles
                        </button>
                    </p>
                </div>
            </form>
        <% } %>
             
        <div class="columns">
            <% if (roomData.isPlaying) { %>
                <a href="/getResults" class='button is-primary column' style="margin: 10px">Get Results</a>
            <%  } else { %>    
                <a href="/startRound" class='button is-primary column' style="margin: 10px">Start Round</a>
            <%}%>
            <!-- <button class='button is-primary column' style="margin: 10px">Show Roles</button> -->
        </div>
        <h2 class="subtitle">ALIVE</h2>
        <div class="columns is-multiline">
            <% participants.forEach(participant => { %>
            <% if(!participant.isKilled) { %>
            <%- include('./partials/adminUserCard', {participant}) %>
            <% } %>
        <%})%>
        </div>
        <hr>

        <h2 class="subtitle dead">DEAD</h2>
        <%participants.forEach(participant => {%>
        <%if(participant.isKilled) {%>
        <%- include('./partials/adminUserCard', {participant}) %>
        <%}%>
        <%})%>

    </div>
    </div>

</section>